# =====================================================
# 本地数据库部署环境配置
# 使用方式: cp env.local.example .env
# =====================================================

# 部署模式
COMPOSE_PROFILES=local-db

# 数据库配置 (本地 Docker PostgreSQL)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=multisig_db
DB_USER=multisig_user
DB_PASSWORD=multisig_password_change_in_production
DB_SSLMODE=disable
DB_EXTERNAL_PORT=5432

# 应用端口配置
BACKEND_PORT=5174
FRONTEND_PORT=5173
FRONTEND_HTTPS_PORT=443

# JWT 配置 (生产环境请修改)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-please

# 应用模式
GIN_MODE=release

# 区块链配置 (请替换为您的实际配置)
ETHEREUM_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your-api-key
BLOCKCHAIN_WS_URL=wss://eth-sepolia.g.alchemy.com/v2/your-api-key

# CORS 配置 (请根据您的域名修改)
CORS_ORIGINS=http://localhost:5173,http://your-domain.com:5173

# 前端配置
FRONTEND_HOST=localhost

# =================== 前端构建时环境变量 ===================
# 这些变量会在Docker构建阶段注入到前端应用中
VITE_API_BASE_URL=http://localhost:5174
VITE_WS_URL=ws://localhost:5174/ws
VITE_CHAIN_ID=11155111
VITE_CHAIN_NAME=Sepolia
VITE_RPC_URL=https://sepolia.infura.io/v3/your-infura-key
VITE_BLOCK_EXPLORER=https://sepolia.etherscan.io
VITE_SAFE_SERVICE_URL=https://safe-transaction-sepolia.safe.global

# =================== 后端运行时环境变量 ===================
# 这些变量会在容器运行时传递给后端应用
PORT=8080
SAFE_FACTORY_ADDRESS=0xa6B71E26C5e0845f74c812102Ca7114b6a896AB2
SAFE_SINGLETON_ADDRESS=0xd9Db270c1B5E3Bd161E8c8503c55cEABeE709552
PRIVATE_KEY=your-private-key-for-gas-payments
SAFE_SERVICE_URL=https://safe-transaction-sepolia.safe.global
